<%- include('../user/partials/header') %>
<%- include('../user/partials/head') %>

<div class="min-h-screen bg-gray-50 py-12">
  <div class="container mx-auto px-4 max-w-4xl">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Success Header with Animation -->
      <div class="bg-gradient-to-r from-purple-600 to-purple-800 py-10 px-6 text-center relative">
        <div class="absolute top-0 left-0 w-full h-full opacity-10">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" class="w-full h-full">
            <path fill="#FFFFFF" d="M139.4 21.5c11.5 10.2 19.1 23.7 22.3 38.4 3.2 14.7 1.9 30.5-6.5 43.8-8.5 13.3-24.1 24.2-39.8 27.7-15.7 3.6-31.3-0.3-45.6-8.6-14.3-8.3-27.2-21-32.1-36.4-4.9-15.4-1.8-33.4 7.4-47 9.3-13.6 24.8-22.7 40.7-24.8 15.9-2.1 32.2 2.7 43.4 12.9 5.5 5.5 10.2 12.5 10.2 12.5z" />
          </svg>
        </div>
        
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-24 h-24 mx-auto mb-4 text-white animate-bounce">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        
        <h1 class="text-4xl font-bold text-white mb-2">Order Confirmed!</h1>
        <p class="text-purple-100 text-lg">Thank you for shopping with us</p>
      </div>
      
      <!-- Order Information -->
      <div class="p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-semibold text-gray-800 mb-3">Your order #<span class="text-purple-600"><%= orderId %></span> has been placed</h2>
          <!-- <p class="text-gray-600">We've sent a confirmation email with all the details to your registered email address.</p> -->
        </div>
        
        <!-- Order Timeline -->
        <div class="mb-8">
          <div class="flex items-center justify-between mb-2">
            <div class="w-1/4 text-center">
              <div class="w-10 h-10 mx-auto rounded-full bg-purple-600 flex items-center justify-center text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <p class="mt-2 text-sm font-medium text-gray-700">Confirmed</p>
            </div>
            <div class="w-1/4 text-center">
              <div class="w-10 h-10 mx-auto rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
              </div>
              <p class="mt-2 text-sm font-medium text-gray-500">Processing</p>
            </div>
            <div class="w-1/4 text-center">
              <div class="w-10 h-10 mx-auto rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                </svg>
              </div>
              <p class="mt-2 text-sm font-medium text-gray-500">Shipped</p>
            </div>
            <div class="w-1/4 text-center">
              <div class="w-10 h-10 mx-auto rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <p class="mt-2 text-sm font-medium text-gray-500">Delivered</p>
            </div>
          </div>
          <div class="relative">
            <div class="overflow-hidden h-2 mb-4 flex rounded bg-gray-200">
              <div class="shadow-none flex flex-col whitespace-nowrap justify-center bg-purple-600" style="width: 25%"></div>
            </div>
          </div>
        </div>
        
        <!-- Estimated Delivery -->
        <div class="bg-purple-50 rounded-lg p-4 mb-8 flex items-center">
          <div class="mr-4 text-purple-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-gray-800">Estimated Delivery</h3>
            <p class="text-purple-600 font-medium">3-5 business days</p>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col md:flex-row gap-4 justify-center">
          <a href="/user/order/detail/<%= orderId %>" class="inline-flex items-center justify-center px-6 py-3 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors duration-200 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            View Order Details
          </a>
          <a href="/user/shope" class="inline-flex items-center justify-center px-6 py-3 border border-purple-600 text-purple-600 rounded-md hover:bg-purple-50 transition-colors duration-200 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            Continue Shopping
          </a>
        </div>
      </div>
    </div>
    
    <!-- Need Help Section -->
    <div class="mt-8 text-center">
      <p class="text-gray-600 mb-2">Need help with your order?</p>
      <a href="/user/contact-us" class="text-purple-600 hover:underline font-medium">Contact our customer support</a>
    </div>
  </div>
</div>

<%- include('../user/partials/foot') %>
<%- include('../user/partials/footer') %>