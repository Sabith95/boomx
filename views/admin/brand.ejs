<%- include("../admin/partials/header") %>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>

<div class="p-6 bg-gray-100">
  <h2 class="text-2xl font-semibold text-primary-800 mb-6">Brands</h2>
  
  <div class="bg-white rounded-lg shadow-md">
    <div class="p-6">
      <div class="flex flex-wrap -mx-3">
        <!-- Add Brand Form -->
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <form id="brandForm" method="post" action="/admin/brands" enctype="multipart/form-data" class="space-y-4">
            <div>
              <label for="brand_name" class="block text-sm font-medium text-gray-700 mb-1">Brand Name</label>
              <input type="text" id="brand_name" name="name" placeholder="Type here" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
            </div>
            <div>
              <label for="brand_description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <textarea id="brand_description" name="description" rows="3" placeholder="Brand description" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"></textarea>
            </div>
            <div>
              <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                <div class="mb-4">
                    <label for="product_image" class="block text-sm font-medium text-gray-700 mb-2">Brand Image</label>
                    <input 
                      type="file" 
                      name="image" 
                      id="product_image" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                      accept="image/*"
                    />
                  </div>
              </div>
            </div>
            <div>
              <button type="submit" class="w-full bg-primary-600 text-white py-2 px-4 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                Add Brand
              </button>
            </div>
          </form>
        </div>
        
        <!-- Brands Table -->
        <div class="w-full md:w-2/3 px-3">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Brand</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Logo</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">List/Unlist</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Edit</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% if(brands && brands.length) { %>
                    <% brands.forEach(function(brand){ %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= brand.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex-shrink-0 h-10 w-10">
                        <% if(brand.image){ %>
                      <img class="h-10 w-10 rounded-full" src="<%= brand.image %>" alt="<%= brand.image %>">
                      <% } else { %>
                        <span class="text-gray-500 text-sm">No Image</span>
                        <% } %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= brand.description %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <% if (brand.isListed){ %>
                    <a href="/admin/brands/unlist/<%= brand._id %>" class="text-white bg-red-600 hover:bg-red-700 px-3 py-2 rounded-md text-sm font-medium mr-2 confirm-action">Unlist</a>
                    <% } else { %>
                    <a href="/admin/brands/list/<%= brand._id %>" class="text-white bg-green-600 hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium confirm-action">List</a>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <a href="/admin/brands/edit/<%= brand._id %>" class="text-white bg-blue-600 hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium">Edit</a>
                  </td>
                </tr>
                <% }); %>
                <% } else { %>
                    <tr>
                      <td colspan="6" class="px-6 py-4 whitespace-nowrap text-center">No categories found</td>
                    </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Pagination -->
  <div class="mt-6 flex justify-center">
    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
      <!-- Add pagination links here -->
    </nav>
  </div>
</div>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50 hidden">
        <div class="bg-white rounded-lg shadow-lg w-11/12 md:w-1/3 p-6">
          <h3 id="confirmModalTitle" class="text-lg font-medium text-gray-900 mb-4">Confirm Action</h3>
          <p id="confirmModalMessage" class="text-gray-700 mb-6">
            Are you sure you want to perform this action?
          </p>
          <div class="flex justify-end space-x-4">
            <button id="cancelConfirm" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded">
              Cancel
            </button>
            <button id="confirmAction" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded">
              Yes, Confirm
            </button>
          </div>
        </div>
      </div>


<script>
    // adding brands
    document.getElementById('brandForm').addEventListener('submit',async function (e) {
        e.preventDefault()
    
         const form = document.getElementById('brandForm')
         console.log(form)
         const formData = new FormData(form)
         console.log(formData)

         try {
            const result = await fetch ('/admin/brands',{
                method:'POST',
                body:formData
            })
            const data = await result.json()
            
            if(data.success){
                Swal.fire({
                    icon:'success',
                    title:'Success',
                    text:data.message
                }).then(()=>{
                    location.reload()
                })
            }
            else{
                Swal.fire({
                    icon:'error',
                    title:'Error',
                    text:data.message
                })
            }
         } catch (error) {
            Swal.fire({
                icon:'error',
                title:'Error',
                text:'Something went wrong'
            })
         }

    })

    // listing and unlisting

    document.querySelectorAll('.confirm-action').forEach(link=>{
        link.addEventListener('click',function (e){
            e.preventDefault()

            const actionUrl = this.getAttribute('href')
            const actionType = this.textContent.trim()

            
        document.getElementById('confirmModalMessage').textContent= 
        `Are you sure you want to ${actionType.toLowerCase()} this category`

        document.getElementById('confirmAction').setAttribute('data-url',actionUrl)

        document.getElementById('confirmModal').classList.remove('hidden');
        })

         // Cancel button: Hide the modal
      document.getElementById('cancelConfirm').addEventListener('click', function() {
        document.getElementById('confirmModal').classList.add('hidden');
      });

      // Confirm button: Redirect to the stored URL
      document.getElementById('confirmAction').addEventListener('click', function() {
        const url = this.getAttribute('data-url');
        window.location.href = url;
      });

    
          // Optional: Close the modal if clicking outside the modal content
      document.getElementById('confirmModal').addEventListener('click', function(e) {
        if (e.target === this) {
          document.getElementById('confirmModal').classList.add('hidden');
        }
      });
    })

</script>

<%- include("../admin/partials/footer") %>